<h3>All spendinds</h3>

<% @transactions.each{|transaction|  %>
  <p><b>Expense <%= transaction.id %></b></p>
  <p>Name: <%= transaction.name %></p>
  <p>Category: <%=  transaction.category().name  %></p>
  <p>Date: <%= transaction.calendar %></p>
  <p>Amount: £<%= transaction.amount %></p>

  <p><a href="/budgetup/expenses/<%= transaction.id %>">Show Expense</a>

  <form action="/budgetup/expenses/<%= transaction.id %>/delete_expense" method="POST">
    <input type="submit" value="Delete Expense" />
  </form></p>

  <% } %>

<h5> Total: £<%= @total %> </h5>
