<h3>All spendings</h3>

<% @transactions.each{|transaction|  %>
  <table>
    <tr>
  <td><b>Expense </i><%= transaction.id %></b></td>
  <!-- <td>|</td> -->
  <td><u>Name:</u> <%= transaction.name %></td>
  <!-- <td>|</td> -->
  <td><u>Category:</u> <%=  transaction.category().name  %></td>
  <!-- <td>|</td> -->
  <td><u>Date:</u> <%= transaction.calendar %></td>
  <!-- <td>|</td> -->
  <td><u>Amount: </u>£<%= transaction.amount %></td>
  <!-- <td>|</td> -->

  <td><a href="/budgetup/expenses/<%= transaction.id %>">Show Expense</a></td>
  <!-- <td>|</td> -->

  <td><form action="/budgetup/expenses/<%= transaction.id %>/delete_expense" method="POST">
    <input type="submit" value="Delete Expense" />
  </form></td>
  <!-- <td>|</td> -->

  <td><a href="/budgetup/expenses/<%= transaction.id %>/edit">Edit Transaction</a></td>

</tr>
</table>
  <% } %>

  <h5> Total: £<%= @total %> </h5>
